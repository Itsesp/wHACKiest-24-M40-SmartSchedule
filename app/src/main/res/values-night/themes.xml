<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">50dp
        </item><!-- menu item height- vary as u need -->
    </style>

    <style name="NavigationFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@fonts/montserrat_medium.ttf</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="weekText" parent="Widget.AppCompat.TextView" >
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="ToolbarDark" parent="Theme.AppCompat.NoActionBar">

        <item name="android:textColorPrimary">@color/primaryText</item>

        <item name="actionMenuTextColor">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/primaryText</item>

    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopLeft">15dp</item>
    <item name="cornerSizeTopRight">15dp</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:background">@color/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="FontPath.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/montserrat_italic.ttf</item>
    </style>

    <style name="FontPath.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/montserrat_regular.ttf</item>
    </style>

    <style name="FontPath.Medium" parent="android:TextAppearance">
        <item name="fontPath">fonts/montserrat_medium.ttf</item>
    </style>

    <style name="FontPath.SemiBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/montserrat_semi_bold.ttf</item>
    </style>

</resources>